# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/swarmfill_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=swarmfill_db
DATABASE_USER=your_username
DATABASE_PASSWORD=your_password

# Server Configuration
PORT=3000
NODE_ENV=development
API_VERSION=v1

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=your_firebase_app_id

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GOOGLE_DIRECTIONS_API_KEY=your_directions_api_key
GOOGLE_PLACES_API_KEY=your_places_api_key

# Stripe Payment Processing
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# AWS Configuration (for production deployment)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=swarmfill-assets

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Email Service (SendGrid/Nodemailer)
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@swarmfill.com

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# AI Services Configuration
AI_SERVICE_URL=http://localhost:5000
AI_SERVICE_API_KEY=your_ai_service_key

# External APIs
WEATHER_API_KEY=your_weather_api_key
TRAFFIC_API_KEY=your_traffic_api_key

# Security
CORS_ORIGIN=http://localhost:3001,http://localhost:19006
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Demo Mode (for Sparkathon)
DEMO_MODE=true
MOCK_PAYMENTS=true
MOCK_SMS=true
SEED_DEMO_DATA=true
